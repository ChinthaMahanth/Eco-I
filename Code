static void savingsPlan()
  {
  Scanner a = new Scanner(System.in);
  System.out.println("------------------------------------------------------");
  System.out.println("Welcome!");
  System.out.println("Please enter your approximate monthly (after-tax) income: ");
  int income = a.nextInt();
  double needs = income*0.5;
  double wants = income*0.3;
  double savings = income*0.2;
  System.out.println("------------------------------------------------------");
  System.out.println("Suggested Cost Breakdown:");
  System.out.println("Needs = $" + needs);
  System.out.println("Wants = $" + wants);
  System.out.println("Savings = $" + savings);
  System.out.println("------------------------------------------------------");
  System.out.println("Personalized Spending Calculator:");
  System.out.println("Current Stats: ");
  System.out.println("$$ Left for Needs: $" + needs);
  System.out.println("$$ Left for Wants: $" + wants);
  System.out.println("$$ Left for Savings: $" + savings);
  System.out.println("------------------------");
  System.out.println("Would you like to record a monetary spending?");
  Scanner spendingChoice = new Scanner(System.in);
  String x = spendingChoice.nextLine();
  if (x.equals("yes"))
  {
      System.out.println("Awesome!");
      System.out.println("Does it fall under the needs, wants or savings category?");
      Scanner categoryChoice = new Scanner(System.in);
      String response2 = categoryChoice.nextLine();
        if (response2.equals("needs"))
        {
          System.out.println("How much $$ did you spend?");
          double moneyValue = a.nextDouble();
          needs = needs - moneyValue;
          System.out.println("Current Stats: ");
          System.out.println("$$ Left for Needs: $" + needs);
          System.out.println("$$ Left for Wants: $" + wants);
          System.out.println("$$ Left for Savings: $" + savings);
        }
        if (response2.equals("wants"))
        {
          System.out.println("How much $$ did you spend?");
          double moneyValue = a.nextDouble();
          wants = wants - moneyValue;
          System.out.println("Current Stats: ");
          System.out.println("$$ Left for Needs: $" + needs);
          System.out.println("$$ Left for Wants: $" + wants);
          System.out.println("$$ Left for Savings: $" + savings);  
        }
        if(response2.equals("savings"))
        {
          System.out.println("How much $$ did you spend?");
          double moneyValue = a.nextDouble();
          savings = needs - moneyValue;
          System.out.println("Current Stats: ");
          System.out.println("$$ Left for Needs: $" + needs);
          System.out.println("$$ Left for Wants: $" + wants);
          System.out.println("$$ Left for Savings: $" + savings);
        }
  }
  else{
    System.out.println("Transfering you to the Home Page...");
    System.out.println("------------------------------------------------------");
    choices();
  }

  System.out.println("Would you like to record another monetary spending?");
  Scanner spendingChoice1 = new Scanner(System.in);
  String x1 = spendingChoice.nextLine();
  if (x1.equals("yes"))
  {
      System.out.println("Awesome!");
      System.out.println("Does it fall under the needs, wants or savings category?");
      Scanner categoryChoice1 = new Scanner(System.in);
      String response2 = categoryChoice1.nextLine();
        if (response2.equals("needs"))
        {
          System.out.println("How much $$ did you spend?");
          double moneyValue = a.nextDouble();
          needs = needs - moneyValue;
          System.out.println("Current Stats: ");
          System.out.println("$$ Left for Needs: $" + needs);
          System.out.println("$$ Left for Wants: $" + wants);
          System.out.println("$$ Left for Savings: $" + savings);
        }
        if (response2.equals("wants"))
        {
          System.out.println("How much $$ did you spend?");
          double moneyValue = a.nextDouble();
          wants = wants - moneyValue;
          System.out.println("Current Stats: ");
          System.out.println("$$ Left for Needs: $" + needs);
          System.out.println("$$ Left for Wants: $" + wants);
          System.out.println("$$ Left for Savings: $" + savings);  
        }
        if(response2.equals("savings"))
        {
          System.out.println("How much $$ did you spend?");
          double moneyValue = a.nextDouble();
          savings = needs - moneyValue;
          System.out.println("Current Stats: ");
          System.out.println("$$ Left for Needs: $" + needs);
          System.out.println("$$ Left for Wants: $" + wants);
          System.out.println("$$ Left for Savings: $" + savings);
        }
    System.out.println("Transfering you to the Home Page...");
    System.out.println("------------------------------------------------------");
    choices();
  }
  else{
    System.out.println("Transfering you to the Home Page...");
    System.out.println("------------------------------------------------------");
    choices();
  }
  
    
   
  
