    System.out.println("(3) SEC Investments");
    System.out.println("(4) Savings/Spending Plan");
    System.out.println("(5) ECO Friendly");
    int choice = initialChoice.nextInt();
    if (choice == 1)
    {
      healthySpendingHabits();
    }
    if(choice == 2)
    {
      investingPro();
    }
    if(choice == 3)
    {
      secInvestments();
    }
    if (choice == 4)
    {
      savingsPlan();
    }
    if (choice == 5)
    {
      ecoFriendlyChoices();
    }
  }  

